{
  "name": "@blog/markdown",
  "version": "6.26.150",
  "description": "markdown utils for parsing blog articles",
  "author": "Aquariuslt <superaquariuslt@gmail.com>",
  "homepage": "https://github.com/aquariuslt/blog#readme",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aquariuslt/blog.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "test": "jest",
    "build:lib": "tsc"
  },
  "dependencies": {
    "@blog/common": "^6.26.150",
    "cheerio": "1.0.0-rc.3",
    "gray-matter": "4.0.2",
    "lodash": "4.17.20",
    "markdown-it": "12.0.1",
    "markdown-it-anchor": "6.0.0",
    "uslug": "1.0.4"
  },
  "devDependencies": {
    "@types/cheerio": "0.22.22",
    "@types/jest": "26.0.14",
    "@types/lodash": "4.14.162",
    "@types/markdown-it": "0.0.9",
    "@types/node": "13.13.5",
    "jest": "26.5.3",
    "jest-raw-loader": "1.0.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.1",
    "typescript": "4.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.*\\.md$": "jest-raw-loader"
    },
    "collectCoverageFrom": [
      "!**/__tests__/**",
      "<rootDir>/src/**/*.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "testEnvironment": "node",
    "coverageDirectory": "<rootDir>/coverage"
  }
}
